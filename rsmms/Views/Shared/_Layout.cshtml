<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 人事管理系统</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Scripts/layui/layui.js"></script>
    <script type="text/javascript" src="~/Scripts/jqprint/jquery-1.11.3.min.js"></script>   
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("人事管理系统", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("员工管理", "EmpList", "Emp")</li>
                    <li>@Html.ActionLink("部门管理", "DepList", "Dep")</li>
                    <li>@Html.ActionLink("角色管理", "RoleList", "Role")</li>
                    <li>@Html.ActionLink("菜单管理", "MenuList", "Menu")</li>
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                </ul>

                <ul style="float:right;" class="nav navbar-nav">

                    <li>@Html.ActionLink("修改密码", "ToUpdatePassword", "Emp")</li>
                    <li>@Html.ActionLink("退出系统", "ExitSystem", "Home")</li>
                    @if (Session["ename"] != null)
                    {
                        <li>@Html.ActionLink("欢迎你，" + @Session["ename"], "", "")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>

    <footer style="position:absolute;bottom:0; width:100%; height:35px;background-color: #BDBDBD;">

        <p style="text-align:center; font-size:15px; margin-top:5px;">&copy; @DateTime.Now.Year - 人事管理系统</p>

    </footer>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
