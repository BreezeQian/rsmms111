<script>
    $(function () {
        layui.use(['layer', 'form', 'table'], function () {
            var layer = layui.layer,
                $ = layui.jquery,
                form = layui.form,
                table = layui.table,
                t;
        });
        $("#login").click(function () {
            var eid = $("#eid").val();
            var password = $("#password").val();
            $.ajax({
                url: '/Login/Login?eid=' + eid + '&password=' + password,
                type: 'post',
                dataType: 'json',
                async: false,
                success: function (result) {
                    if (result == "success") {
                        window.location.href = '/Home/index';
                    } else {
                        layer.msg(result, {
                            time: 1500,
                        });
                    }
                },
                error: function () {
                    layer.alert('发生不知名错误！');
                }
            });
        });

    });

</script>

