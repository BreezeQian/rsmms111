                //        layer.closeAll();
                //        queryRoleByCondition();
                //        layer.msg(result, {
                //            time: 1500,
                //        });

                //    },
                //    error: function () {
                //        alert('系统提示：发生不知明错误，请联系管理员');
                //    }
