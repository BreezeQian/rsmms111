</script>
<form id="queryDepFrom">
    <div>


        <font size="4">
            角色名称：
        </font><input type="text" id="rname" name="rname" />&nbsp;&nbsp;
        <div style="float:right;">
            <input type="button" value="新增" class="btn-danger" id="add" />&nbsp;&nbsp;
